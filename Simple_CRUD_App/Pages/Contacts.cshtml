@page
@model Simple_CRUD_App.Pages.ContactsModel
@{
    ViewData["Title"] = "Контакты";
}
<script src="~/js/createTable.js"></script>
<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#contactModal" data-bs-whatever="create">Добавить</button>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ФИО</th>
            <th scope="col">Номер телефона</th>
            <th scope="col">Должность</th>
            <th scope="col">Дата рождения</th>
        </tr>
    </thead>
    <tbody id="table-body"></tbody>
</table>
<!-- Модальное окно добавления/изменения контакта -->
<div class="modal fade" id="contactModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="contactModalLabel">Добаление контакта</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form action="/api/contacts" method="post">
                <div class="modal-body">
                    <label for="form-name" class="form-label">ФИО</label>
                    <input id="form-name" type="text" name="name" class="form-control" pattern="^\+375\d{9}$" required>
                    <label for="form-phone" class="form-label">Номер телефона</label>
                    <input id="form-phone" type="tel" name="mobilePhone" class="form-control" required>
                    <label for="form-job-title" class="form-label">Профессия</label>
                    <input id="form-job-title" type="text" name="jobTitle" class="form-control" required>
                    <label for="form-birth-date" class="form-label">Дата рождения</label>
                    <input id="form-birth-date" type="date" name="birthDate" class="form-control" required>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-outline-primary" onclick="fieldsValidation()">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    
    createTbody();
    async function createTbody(){
    const data = await getAllContacts();
    // console.log(data.contacts);
     createTableBody(data.contacts);
    }
    //изменение модального окна в зависмости объекта вызова
    const exampleModal = document.getElementById('contactModal');
    if (exampleModal) {
      exampleModal.addEventListener('show.bs.modal', event => {
        const targetElement = event.relatedTarget

        // console.log(button);

        const recipient = targetElement.getAttribute('data-bs-whatever');

        // console.log(recipient);
        
        const modalTitle = exampleModal.querySelector('.modal-title');

        // const submitBtn = 

        switch(recipient) {
            case 'create' :
            modalTitle.textContent = `Создать контакт`
            break;

            case 'edit' :
            modalTitle.textContent = `Изменить контакт`
            const idRow = targetElement.getAttribute('id-row');
            // console.log(idRow);
            break;
        }
      });
      //очистка модального окна после закрытия
      exampleModal.addEventListener('hide.bs.modal', event => {
        const modalBody = document.querySelector('.modal-body');
        // console.log(modalBody);
        for(item of modalBody.children){
            // console.log(item.tagName);
            if(item.tagName === 'INPUT'){
                item.value = '';
            }
        }
        
      });
    }
</script>
